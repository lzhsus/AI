.search-box {
  width: 100%;
  height: 48px;
}
.search-box .search-main {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 48px;
  border-bottom: 1px solid #f5f5f5;
  background: #fff;
  font-size: 14px;
  color: #000;
  font-weight: bold;
}
.search-box .search-main .input {
  display: block;
  width: 90%;
  height: 38px;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
