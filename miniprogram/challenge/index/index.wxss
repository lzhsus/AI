page {
  background: rgba(238, 238, 238, 0.1);
  overflow: hidden;
}
#index {
  height: 100vh;
}
#index .page-index {
  height: 100vh;
}
#index .page-index .header {
  width: 700rpx;
  height: 300rpx;
  position: relative;
  margin: 30rpx auto;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 0 20rpx rgba(221, 119, 119, 0.1);
}
#index .page-index .header .user-msg-box {
  width: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  justify-content: center;
  flex-direction: column;
}
#index .page-index .header .user-msg-box .cuserAvatarUrl {
  display: block;
  width: 142rpx;
  height: 142rpx;
  background: #fff;
  border: 3px solid #ccc;
  box-sizing: border-box;
  border-radius: 50%;
  overflow: hidden;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
#index .page-index .header .user-msg-box .cuserAvatarUrl view {
  display: block;
  width: 126rpx;
  height: 126rpx;
  overflow: hidden;
  border-radius: 50%;
}
#index .page-index .header .user-msg-box .userNickName {
  font-size: 18px;
  color: #000;
  font-weight: bold;
  text-align: center;
  margin-top: 10rpx;
}
#index .page-index .main {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
  align-items: center;
}
#index .page-index .main .item {
  width: 700rpx;
  height: 150rpx;
  box-shadow: 0 0 12rpx rgba(214, 206, 206, 0.5);
  background: #fff;
  border-radius: 12rpx;
  padding: 14rpx;
  box-sizing: border-box;
}
#index .page-index .main .item .item-main {
  width: 100%;
  height: 100%;
  border: 1px dashed #cecece;
  box-sizing: border-box;
  position: relative;
}
#index .page-index .main .item .item-main .grade-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-wrap: nowrap;
}
#index .page-index .main .item .item-main .grade-icon span {
  display: flex;
  width: 30rpx;
}
#index .page-index .main .item .item-main .grades-icon {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
#index .page-index .main .item .item-main .grades-icon span {
  display: block;
  width: 20rpx;
  height: 20rpx;
  background: #df3838;
  margin-left: 12rpx;
}
