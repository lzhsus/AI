  background: rgba(245, 245, 245, 0.1);
}
#ranking .ranking-content {
  overflow: hidden;
}
#ranking .ranking-content .head-box {
  width: 100%;
  height: 150rpx;
}
#ranking .ranking-content .head-box .head-main {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  background: #fff;
  box-shadow: 0 0 12rpx rgba(0, 0, 0, 0.1);
  font-size: 30px;
  font-weight: bold;
  color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}
#ranking .ranking-content .ranking-list {
  width: 700rpx;
  margin: 30rpx auto;
}
#ranking .ranking-content .ranking-list .item {
  width: 700rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f3f3f3;
  border-radius: 12rpx;
  box-shadow: rgba(0, 0, 0, 0.9);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 16px;
  color: #000;
  text-align: center;
  font-weight: bold;
}
#ranking .ranking-content .ranking-list .item:last-child {
  margin-bottom: 0;
}
#ranking .ranking-content .ranking-list .item.title {
  padding: 0 20rpx;
  height: 80rpx;
}
#ranking .ranking-content .ranking-list .item .user {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
#ranking .ranking-content .ranking-list .item .user .head {
  width: 120rpx;
  height: 120rpx;
  border-radius: 4px;
  overflow: hidden;
  box-shadow: rgba(0, 0, 0, 0.9);
}
#ranking .ranking-content .ranking-list .item .user .nickname {
  max-width: 120rpx;
  width: 120rpx;
  font-size: 12px;
}
#ranking .ranking-content .ranking-list .item .score {
  font-size: 16px;
  color: #000;
  font-weight: bold;
  width: 100rpx;
  text-align: center;
}
#ranking .ranking-content .ranking-list .item .rank {
  font-size: 16px;
  color: red;
  font-weight: bold;
  width: 100rpx;
  text-align: center;
}
