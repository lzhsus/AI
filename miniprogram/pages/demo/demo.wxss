page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.time-box {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  z-index: 99999;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 4px 20rpx;
  min-width: 140rpx;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}
.time-box::before {
  display: inline-block;
  content: '';
  margin-right: 20rpx;
  width: 42rpx;
  height: 42rpx;
  background: url(https://qh.eintone.com/arweapp/static/images/game/time-icon.png) center center no-repeat;
  background-size: cover;
}
.pop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.pop .count-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 100px;
  color: #fff;
  font-weight: bold;
}
