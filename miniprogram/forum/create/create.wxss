.hint {
  display: block;
  width: 100px;
  height: 100px;
  border: 1px solid #ccc;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
  line-height: 100px;
  margin: 100rpx auto;
}
.desc {
  width: 700rpx;
  background: #f1f1f1;
  margin: 100rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
}
.desc textarea {
  display: block;
  width: 100%;
  height: 200rpx;
  font-size: 14px;
  color: #000;
}
.btn {
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 1px solid #ccc;
  font-size: 20px;
  font-weight: bold;
  color: #ccc;
  margin: 100rpx auto;
  text-align: center;
  line-height: 80rpx;
}
