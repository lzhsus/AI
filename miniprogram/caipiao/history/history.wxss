page {
  background: #ebebeb;
}
.today-view-mian {
  width: 100%;
  margin-top: 12rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
}
.today-view-mian .rule-icon {
  padding: 4px;
  font-size: 10px;
  color: #000;
  display: flex;
  justify-content: flex-end;
}
.today-view-mian .item-box {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.today-view-mian .item-box .head {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}
.today-view-mian .item-box .head .day {
  font-size: 20px;
  color: #000;
  font-weight: bold;
  padding: 12rpx 20rpx;
  box-sizing: border-box;
}
.today-view-mian .item-box .head .win {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.today-view-mian .item-box .head .win text {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 2px;
  border-radius: 50%;
  border: 1px solid #e0e0e0;
  text-align: center;
  line-height: 40rpx;
  font-size: 12px;
}
.today-view-mian .item-box .head .win text.active {
  background: #017dd6;
  color: #fff;
}
.today-view-mian .item-box .head .win text.active2 {
  background: #f9c301;
  color: #fff;
}
.today-view-mian .item-box .item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
  padding-left: 100rpx;
  box-sizing: border-box;
}
.today-view-mian .item-box .item .price {
  width: 140rpx;
  height: 40rpx;
  background: #f0f0f0;
  border-radius: 6px;
  overflow: hidden;
  font-size: 10px;
  color: #999;
  font-weight: bold;
  text-align: center;
  line-height: 40rpx;
}
.today-view-mian .item-box .item text {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 4px;
  border-radius: 50%;
  border: 1px solid #e0e0e0;
  text-align: center;
  line-height: 50rpx;
  font-size: 14px;
}
.today-view-mian .item-box .item text.active {
  background: #017dd6;
  color: #fff;
}
.today-view-mian .item-box .item text.active2 {
  background: #f9c301;
  color: #fff;
}
.today-view-mian .item-box .item text.win {
  position: relative;
}
.today-view-mian .item-box .item text.win::after {
  position: absolute;
  bottom: -4px;
  left: 50%;
  transform: translateX(-50%);
  display: block;
  content: '';
  width: 20px;
  height: 4px;
  background: red;
}
.today-view-mian .win-box {
  width: 100%;
  height: 150rpx;
}
.today-view-mian .win-box .win-box-main {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  background: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.today-view-mian .win-box .win-box-main .input {
  width: 500rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}
.today-view-mian .win-box .win-box-main .input input {
  display: block;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.today-view-mian .win-box .win-box-main .btn {
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: #409EFF;
  font-size: 16px;
  color: #fff;
  font-weight: bold;
  border-radius: 6px;
  overflow: hidden;
  margin: 0 12rpx;
}
.pop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.pop .pop-content {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  border-radius: 20rpx;
  padding: 4px;
  background: #fff;
}
